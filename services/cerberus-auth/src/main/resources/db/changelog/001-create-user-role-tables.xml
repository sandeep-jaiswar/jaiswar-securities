<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1-ib-user-v2" author="cerberus-auth-dev">
        <!-- Create Users Table -->
        <createTable tableName="users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="employee_id" type="VARCHAR(50)">
                <constraints nullable="true" unique="true"/> <!-- Can be set later -->
            </column>
            <column name="first_name" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
            <column name="last_name" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
            <column name="department" type="VARCHAR(100)"/>
            <column name="job_title" type="VARCHAR(100)"/>
            <column name="manager_employee_id" type="VARCHAR(50)"/>
            <column name="account_status" type="VARCHAR(30)" defaultValue="PENDING_APPROVAL">
                <constraints nullable="false"/>
            </column>
            <column name="enabled" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="last_login_date" type="TIMESTAMP WITHOUT TIME ZONE"/>
            <column name="password_last_changed" type="TIMESTAMP WITHOUT TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="failed_login_attempts" type="INT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="two_factor_enabled" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITHOUT TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP WITHOUT TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Create Roles Table -->
        <createTable tableName="roles">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)"> <!-- Increased length for more descriptive roles -->
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

        <!-- Create User-Roles Join Table -->
        <createTable tableName="user_roles">
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" foreignKeyName="fk_user_roles_user" references="users(id)" deleteCascade="true"/>
            </column>
            <column name="role_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" foreignKeyName="fk_user_roles_role" references="roles(id)" deleteCascade="true"/>
            </column>
        </createTable>

        <!-- Add Indexes for Performance -->
        <createIndex tableName="users" indexName="idx_users_username">
            <column name="username"/>
        </createIndex>
        <createIndex tableName="users" indexName="idx_users_email">
            <column name="email"/>
        </createIndex>
        <createIndex tableName="users" indexName="idx_users_employee_id">
            <column name="employee_id"/>
        </createIndex>
        <createIndex tableName="roles" indexName="idx_roles_name">
            <column name="name"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
